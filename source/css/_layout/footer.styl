#footer
  position: relative
  background: $white
  background-attachment: local
  background-position: bottom
  background-size: cover

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      background-color: alpha($dark-black, .5)
      content: ''

#footer-wrap
  position: relative
  padding: 2rem 1rem
  color: var(--font-black)
  text-align: center
  border-style: solid;
  border-width: 0.0001px;
  border-color: rgba(255, 227, 230, 0.06);

  a
    color: var(--font-black)

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 .2rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
    max-height: 1.4em
    width auto
