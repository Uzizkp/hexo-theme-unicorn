#douban
    max-width: 1300px
    margin: auto
    .douban,
    .recent-douban-posts
        overflow:hidden;
        display: block;
        float: left;
    .douban
        border-radius: 10px;
        box-shadow: var(--card-box-shadow)
        float: right
        width: 55%;
        // margin-left: 2rem
        +maxWidth600()
            width: 100%;
            height: auto
            margin: 0 0 2rem 0
        &:hover
            box-shadow: var(--card-hover-box-shadow)

        iframe
            border: 0
            width:100%; 
            height: calc(90vh)
            background: var(--white)
            border-radius: 8px
            margin-top: -55px;
    .recent-douban-posts
        width: 40%
        overflow: visible
        +maxWidth600()
            width: 100%;
            height: auto
        iframe
            border-radius: 10px;
            box-shadow: var(--card-box-shadow)
            border: 0
            background-color: white; 
            width:100%; 
            height: 350px
            &:hover
                box-shadow: var(--card-hover-box-shadow)
 