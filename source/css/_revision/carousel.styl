#carousel
    width: 100%
    height: 100%
    img
        width: 100%
        height: 100%
        object-fit: cover
    .carousel-box
        display: none
        height: 100%
        width: 100%
        overflow: hidden
        .anim-model
            position: absolute;
            bottom:0; 
            left: 40%; 
            height: 70%
            img
                width: auto 
        .carousel-video
            object-fit: cover
            width : 100%
            height: 100%
        .site-info
            position: absolute
            bottom: 1rem
            padding: 0
            width: 100%
            .site-title,
            .site-subtitle
                text-shadow: .1rem .1rem .2rem rgba(0, 0, 0, .15)
                line-height: 1.4
                width: 70%
                a
                    color: var(--white)
                    border-radius: 16px
                    cursor: pointer
                    &:hover
                        background: rgba(255, 255, 255, .8)
            .site-title
                margin: 2rem
                letter-spacing: 4px
                color: var(--white)
                font-size: 2vw
                +maxWidth600()
                    font-size: 6vw
                    margin: 2rem 1rem
                
            .site-subtitle
                width: 23%
                letter-spacing: 1px
                margin: 2rem
                color: var(--white)
                font-size: 1.3vw
                opacity : .8
                font-weight: normal
                +maxWidth600()
                    width: 75%
                    font-size: 1em
                    margin: 2rem 1rem
                    
    #carousel-indictors
        // text-align:center
        position: absolute
        bottom: 1rem
        right: 1rem
        margin: 2rem
        +maxWidth600()
            margin: 2rem 0rem
        .carousel-dot 
            cursor: pointer
            height: 20px
            width: 20px
            margin: 10px 0 0 0
            background-color: var(--light-grey)
            border-radius: 50%
            display: block
            opacity : .3
            transition: background-color 0.6s ease
            +maxWidth600()
                height: 15px
                width: 15px
        .active, .carousel-dot:hover 
            // background-color: var(--white)
            opacity : 1
    /* Fading animation */
    .fade
        -webkit-animation-name: fade;
        -webkit-animation-duration: .5s;
        animation-name: fade;
        animation-duration: .5s;

    @-webkit-keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }

    @keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }