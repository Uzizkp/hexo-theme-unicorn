
#projects-dashbord
    padding: 1rem
    width: 100%
    +maxWidth768()
        padding: 0rem
    img
        object-fit: cover
        transition: transform .5s;
        &:hover
            transform: scale(1.2)
    .tags
        font-size: .7em
        +maxWidth768()
            font-size: .2em
            display: none
        .tag
            padding: 1px 5px
            margin-right: 2px
            border-radius: 6px
    .project-card
        border-radius: 10px
        overflow: hidden;
        display: inline-block
        position: relative
        padding: 0
        border-radius: 8px
        box-shadow: var(--card-hover-box-shadow)
        &:hover
             box-shadow: var(--card-box-shadow)
        .project-cover
            width: 100%
            height: 100%
            background: var(--card-bg)
            border-radius: 8px
            img
                overflow: hidden;
                object-fit: cover;
        .project-info
            position: absolute
            width: 100%
            padding: 2rem 2rem 1.5rem 1.3rem
            bottom: 0
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap;
            +maxWidth768()
                width: 60%
                padding: .5rem
            .title,
            .tag,
            .more
                letter-spacing: 1px
                cursor:pointer
                color: var(--white)

            .title
                font-size: 1.2em
                font-weight: bold
                text-shadow: .2rem .2rem .2rem rgba(7, 17, 27, .3)
                &:hover
                    text-decoration: underline
                +maxWidth768()
                    font-size: .4rem
            .more
                font-size: .9em
                opacity : 1
    .head
        display: grid;
        height: 24rem
        grid-template-columns: 2fr repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        grid-column-gap: 20px;
        grid-row-gap: 20px;
        margin-bottom: 2rem
        +maxWidth768()
            height: 12rem
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(2, 1fr);
            grid-column-gap: 10px;
            grid-row-gap: 20px;
        .div1 
            grid-area: 1 / 1 / 3 / 2; 
            .title
                font-size: 2em
            +maxWidth768()
                grid-area: 1 / 1 / 2 / 3;
                .title
                    font-size: 0.4em
        .div2 
            grid-area: 1 / 2 / 2 / 4;
            +maxWidth768()
                grid-area: 2 / 1 / 3 / 2;
        .div3 
            grid-area: 2 / 2 / 3 / 3;
        .div4 
            grid-area: 2 / 3 / 3 / 4; 
            +maxWidth768()
                display: none

    .more-project-head
        margin-bottom: 2rem
        align-items: start
        .more-projects-head-title
            display: inline-block
            padding-left: 5px
            line-height: 5px 
            transform: translateY(-15%)   
            p
                color: var(--font-color)
            .title

                font-size: 1.8em
                font-weight: bolder
                +maxWidth768()
                    font-size: .8em    
            .info
                font-size: 1em
                opacity : .5
                +maxWidth768()
                    font-size: .8em  
        .more-project-head-list
            float: right
            width: 60%
            .project-tag
                width: 20%
                display: inline-block
                float: right
                padding: .5rem
                margin: 1.5rem 0 0 1rem
                text-align: center
                border-radius: 8px
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap;
                +maxWidth768()
                    font-size: 1em
                    margin: 0 0 0 0.5rem
                    letter-spacing: 2px
                    width: 25%
                a
                    color: white
    .more-project
        height: auto
        display: flex
        justify-content: center;
        flex-wrap: wrap;
        justify-content: space-between;
        .more-project-weight
            width: 23.5%
            height: 16rem
            padding: 0
            +maxWidth768()
                height: 6rem
                width: 100%
        .project-card
            box-shadow: none
            overflow: visible
            .project-cover
                width: 100%
                height: 10rem
                overflow: hidden
                border-radius: 8px
                box-shadow: var(--card-hover-box-shadow)
                &:hover
                    box-shadow: var(--card-box-shadow)
                +maxWidth768()
                    height: 5rem
            .project-info
                padding: 2rem 2rem 1.5rem .4rem
                transform: translateY(-0.8rem)
                .title,
                .more
                    color: var(--font-color)
                    text-shadow: none
                    +maxWidth768()
                        color: var(--white)
                .tag
                    background: rgba(0, 225, 255, 0.559)
            
 
                    

        